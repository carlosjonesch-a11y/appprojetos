# EXEMPLO DE CONFIGURAÇÃO DE SECRETS PARA STREAMLIT CLOUD
# Copie este arquivo para .streamlit/secrets.toml e preencha com seus valores reais
# NÃO FAÇA COMMIT deste arquivo com dados sensíveis!

# Google Sheets Configuration
[google_sheets]
spreadsheet_id = "SEU_SPREADSHEET_ID_AQUI"
credentials_json = """
{
  "type": "service_account",
  "project_id": "seu-projeto",
  "private_key_id": "sua-key-id",
  "private_key": "sua-private-key",
  "client_email": "sua-email@seu-projeto.iam.gserviceaccount.com",
  "client_id": "seu-client-id",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/sua-email%40seu-projeto.iam.gserviceaccount.com"
}
"""
